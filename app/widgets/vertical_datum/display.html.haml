#new_vertical_dautm
  %h3 Create a new Vertical Datum:
  = form_for(@vertical_datum, :url=> url_for_event(:submit), :remote => true)do |f|
    - if @vertical_datum.errors.any?
      - @vertical_datum.errors.full_messages.each do |msg|
        %li
          = msg
    = f.label("Term:")
    %br
    = f.text_area("term", :cols => 45, :rows => 2, :style => {:resize => "none"}, :class => "data_type_term")
    %br
    = f.label("Definition:")
    %br
    = f.text_area("definition", :cols => 45, :rows => 6, :style => {:resize => "none"}, :class => "description")
    %br
    = f.submit("Save Vertical Datum")
