#roles
  %table
    %thead
      %tr
        %th Name
        %th Description
        %th 
    %tbody
      - for role in collection
        %tr
          %td= link_to(role.name, edit_system_role_path(role))
          %td= role.description
          %td= link_to(image_tag("delete.png", :size => "16x16"), system_role_path(role), :method=>:delete, :confirm => 'Are you sure?')

