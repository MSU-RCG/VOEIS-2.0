<div id='header'>
    <h2><%= link_to('Yogo Data Management Toolkit', '/') %></h2>
</div>
<div id='toolbar'>

    <div id='logout'>
        <%- if logged_in? -%>
            <span id='username'><%=h current_user.name %></span>
            <%= link_to("Logout", logout_path, :method => :delete) %>
        <%- else -%>
            <%= link_to("Login", login_path) %>
        <%- end -%>
    </div>

    <%- if flash[:notice] -%>
        <div class='notice'><p><%= h flash[:notice] %></p></div>
    <%- end -%>

    <%- if flash[:warning] -%>
        <div class='warning notice'><p><%= h flash[:warning] %></p></div>
    <%- end -%>
</div>