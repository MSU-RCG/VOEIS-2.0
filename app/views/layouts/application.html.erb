<!DOCTYPE html>
<html>

  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <title>Yogo Data Management Toolkit: <%= controller.action_name %></title>

    <%= stylesheet_link_tag 'jquery-ui-1.8.1.custom', 'jquery.fancybox-1.3.1', 'yogo' %>
    <%= javascript_include_tag 'jquery-1.4.2.min.js', 
                               'jquery-ui-1.8.1.custom.min.js', 
                               'jquery.fancybox-1.3.1.pack.js',
                               'jrails.js',
                               'application.js' %>
    <%= include_visualization_api %>
    <%= render_visualizations %>
                               
   <link rel="shortcut icon" href="<%= image_path("favicon.png") %>">
  </head>
  
  <body>
    <div id='header'>
      <%= image_tag('header.png') %>
    </div>
    <div id='menu'>
      <%= render(:partial => 'layouts/menu_links') unless @no_menu %>
      <%= render(:partial => 'layouts/search') unless @no_search %>
    </div>
    <div id="container"  class="clearfix">
      <div id="content">
        <%- if !flash.empty? -%>
          <div class='fitted-content' >
            <%- if flash[:notice] -%>
                <div class='notice'><p><%= flash[:notice] %></p></div>
            <%- end -%>
            <%- if flash[:error] -%>
                <div class='error notice'><p><%= flash[:error] %></p></div>
            <%- end -%>
          </div>
        <%- end -%>
        <%= yield %>
        <div id='footnotes_holder'></div>
      </div> <!-- end content -->
      <br clear='all' style='clear: both;'>
    </div> <!-- end container -->
    
    <div id="footer">
      <div id='yogo-brand'>
        <%= link_to(image_tag("yogo.png", :alt => "The Yogo Data Management Toolkit Logo"), 'http://yogo.msu.montana.edu/') %>
      </div>
    </div>
  </body>
</html>
