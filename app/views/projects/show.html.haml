      //    return site_data[i];
      siteId = ''+siteId;
      console.log('GET-SITE-ID: '+siteId);
      var site = {};
      psites.fetch({query: {id: siteId},
        onItem: function(item) {
          //site = $.extend({},item);
          //site = item;
          console.log('FETCH ITEM:',item);
          for(prop in item) {
            if(item[prop]==null) site[prop] = null;
            else site[prop] = item[prop].toString();
          };
        },
        onError: function(error,request) {
          console.log('ERROR: '+error);
          //site = false;
        }
      });
      return site;
    }
    
