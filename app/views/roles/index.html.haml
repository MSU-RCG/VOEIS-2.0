#roles
  #create-role-link= link_to("Create a new #{resource_class}", new_role_path)
  %table
    %thead
      %tr
        %th Name
        %th Description
        %th 
    %tbody
      - for role in collection
        %tr
          %td= link_to(role.name, edit_role_path(role))
          %td= role.description
          %td= link_to(image_tag("delete.png", :size => "22x22"), role_path(role), :method=>:delete, :confirm => 'Are you sure?')

#pagination-links= pagination_links(resource_class, params[:page], 25)
