/= link_to("View Streaming Data", project_path(@project), :class => 'medium-button-link')
/= link_to("View Field Data", project_path(@project), :class => 'medium-button-link')
=clear_break
#project-actions
  %table.project
    %tr
      %td.map
        #map
          You should see a map here.  
          .map-links
      %td.buttons
        = link_to("Add a Site to #{@project.name}", new_yogo_project_site_path(@project), :class => 'button-link')
        = clear_break
        -if !@project.data_collections.first(:name => "Sites").items.empty?
          = link_to("Add a Data Stream to #{@project.name}", new_yogo_project_data_stream_path(@project), :class => 'button-link')
          =clear_break
          = link_to("View Data Streams", yogo_project_data_streams_path(@project), :class => 'button-link')
        -else 
          %h3 You need to add a site to this Project.
=clear_break


