.medium-centered.boxed
  .rbox.dashed
    = link_to("Create a new User", new_project_user_path(@project), :class => 'button-link fright')
    =clear_break * 2
    - form_tag(update_user_roles_project_users_path, :method => 'post', :id => 'project-user-roles-form') do
      %table
        %thead
          %tr
            %th User Name
            - for role in @roles
              %th= role.name
        %tbody
          - for user in @users
            %tr
              %td= user.login
              -for role in @roles
                %td.text-center
                  = check_box_tag("roles[#{role.id}][]", user.id, user.roles.include?(role), 
                      :id => "user_#{user.id}_role_#{role.id}")
      = submit_tag('Update', :class => 'button-link')
      = link_to('Cancel', edit_project_path(@project), :class => 'cancel')