.extra-small
  %h1#content-title
    #subtitle Edit Group
    = @group.name
    
.extra-small.box
  .rbox.dashed
    = link_to("Delete Group", group_path(@group), 
      :method => :delete, :class => 'button-link fright', 
      :confirm => "Are you sure you want to delete the #{@group.name} group?\nThere is no undo! Continue?" )
    = render(:partial => 'form')
